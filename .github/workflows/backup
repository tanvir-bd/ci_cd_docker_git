name: CI/CD Pipeline
on:
  push:
    branches: [main]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      # Add Docker setup step
      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3

      # Login to Docker Hub (if pushing)
      - name: Login to Docker Hub
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      # Build and push
      - name: Build and push Docker image
        uses: docker/build-push-action@v5
        with:
          context: .
          push: true
          tags: tanvir909/ci_cd_docker_git:latest
          build-args: |
            DATABASE_URL=${{ secrets.DATABASE_URL }}

  deploy:
    needs: build
    runs-on: self-hosted
    steps:
      # Pull the image (if needed)
      - name: Pull Docker image
        run: docker pull tanvir909/ci_cd_docker_git:latest
      - name: Delete old container
        run: docker rm -f ci_cd_docker_git 
      - name: Run docker container
        run: docker run -d -p 3000:3000 --name ci_cd_docker_git tanvir909/ci_cd_docker_git 
